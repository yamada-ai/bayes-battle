    "format:check": "prettier --check 'src/**/*.ts' 'tests/**/*.ts'"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.53.1",
    "vitest": "^1.2.0"
  }
}
